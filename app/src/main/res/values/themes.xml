        <item name="colorPrimary">@color/pickled_blue_wood</item>
        <item name="colorPrimaryVariant">@color/pickled_blue_wood_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turquoise</item>
        <item name="colorSecondaryVariant">@color/turquoise_darker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>